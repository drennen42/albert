<div class="container">
  <h1>{{SESS_USER.is_admin}}</h1>
  <h2>Events</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start</th>
        <th>End</th>
        <th>Client</th>
        <th>Games</th>
        <th>Workers</th>
        {{#if SESS_USER.is_admin}}
        <th>Delete</th>
        {{/if}}
      </tr>
    </thead>
    <tbody>
    {{#each events}}
      <tr id="event-row">
        <td id="event-name"><a href="/events/{{_id}}"> {{name}}</a></td>
        {{!-- <td>{{moment(event.start_date)}}</td>
        <td>{{moment(event.end_date)}}</td> --}}
        <td id="event-start-date">{{moment start_date "ddd, MMM Do, YYYY - h:mm:ss"}}</td>
        {{!-- <td id="event-start-date">{{start_date}}</td> --}}
        <td id="event-end-date">{{moment end_date "ddd, MMM DD, YYYY - h:mm:ss"}}</td>
        {{!-- <td id="event-end-date">{{end_date}}</td> --}}
        <td id="event-client"><a href="/users/{{_id}}">{{client.first_name}}</a></td>
        <td id="event-games">
          <table id="event-games-table">
            {{#each games}}
            <tr id="event-game-row"><td id="event-game"><a href="/casinoGames/{{name}}">{{name}}</a></td></tr>
            {{/each}}
          </table>
        </td>
         <td id="event-workers">
          <table id="event-workers-table">
            {{#each workers}}
            <tr id="event-worker-row"><td id="event-worker"><a href="/users/{{_id}}">{{first_name}} {{last_name}}</a></td></tr>
            {{/each}}
            {{#if ../SESS_USER}}
            <tr><td><button type="button" data-waitlist-worker="{{../SESS_USER.id}}" data-waitlist-event="{{_id}}" class="btn btn-primary">Join Waitlist</button></td></tr>
            {{/if}}
            </table>
        </td>
        {{#if ../SESS_USER.is_admin}}
        <td>
            <form method="POST" action="/events/{{_id}}">
                <input type="hidden" name="id" value="{{_id}}">
                <input type="submit" value="Delete">
                <!--If we don't at the Cross-Site Request Forgey token, this POST will be rejected-->
                <input type="hidden" name="_csrf" value="{_csrf}">
                <input type="hidden" name="_method" value="DELETE"> 
            </form>
        </td>
        {{/if}}
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{#if SESS_USER.is_admin}}
    <a href="/events/new" class="text-center new-event btn btn-primary">Create an Event </a>
  {{/if}}
</div>