<div class="container">
  <h2>Events</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Client</th>
        <th>Games</th>
        <th># of Employees</th>
        <th>Workers</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
    {{#each events}}
      <tr>
        <td><a href="/events/{{event._id}}"> {{event.name}}</a></td>
        <td><a href="/users/{{event._id}}">{{event.client.first_name}}</a></td>
        <td>
          <table>
            {{#each event.games}}
            <tr><td><a href="/casinoGames/{{name}}">{{name}}</a></td></tr>
            {{/each}}
          </table>
        </td>
        <td>{{event.num_employees}}</td>
         <td>
          <table>
            {{#each event.workers}}
            <tr><td><a href="/users/{{_id}}">{{first_name}} {{last_name}}</a></td></tr>
            {{/each}}
            </table>
        </td>
        <td>
            <form method="POST" action="/events/{{_id}}">
                <input type="hidden" name="id" value="{{_id}}">
                <input type="submit" value="Delete">
                <!--If we don't at the Cross-Site Request Forgey token, this POST will be rejected-->
                <input type="hidden" name="_csrf" value="{_csrf}">
                <input type="hidden" name="_method" value="DELETE"> 
            </form>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  <a href="/events/new" class="text-center new-event btn btn-primary">Create an Event </a>
</div>