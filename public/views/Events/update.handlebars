<form method="POST" action="/events/{{event._id}}/update">
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="event-name-input" class="col-sm-2">Event Name</label>
        <div class="col-sm-6">
            <input type="text" name="name" class="form-control" id="event-name-input" placeholder="Event Name" autofocus value="{{event.name}}">
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="description-input" class="col-sm-2">Description</label>
        <div class="col-sm-6">
            <input type="textarea" name="description" class="form-control" id="description-input" placeholder="What's goin on?" value="{{event.description}}">
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="start-date-input" class="col-sm-2">Start</label>
        <div class="col-sm-3">
            <input type="datetime-local" name="start_date_date" class="form-control" id="start-date-input" value="{{moment event.start_date "YYYY-MM-DDTHH:mm"}}">
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="end-date-input" class="col-sm-2">End</label>
        <div class="col-sm-3">
            <input type="datetime-local" name="end_date_date" class="form-control" id="end-date-input" value="{{moment event.end_date "YYYY-MM-DDTHH:mm"}}">
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="location-input" class="col-sm-2">Location</label>
        <div class="col-sm-6">
            <input type="text" name="location" class="form-control" placeholder="Full location address. Ex 123 Fake St, Unrealtown, IL 66666" id="location-input" value="{{event.location}}">
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="client-input" class="col-sm-2">Client</label>
        <div class="col-sm-6">
            <select name="client" data-placeholder="Choose a client" class="chosen-select form-control" id="client-input" placeholder="Client">
                <option value=""></option>
                    <option value="{{event.client._id}}" selected>{{event.client.first_name}} {{event.client.last_name}}</option>
                {{#each clients}}
                    <option value="{{_id}}">{{first_name}} {{last_name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="game-input" class="col-sm-2">Games</label>
        <div class="col-sm-6">
            <table>
            {{#each games}}
                <td><label for="{{#gameNameLower name}}{{/gameName}}">{{#gameName name}}{{/gameName}}</label>
                <input type="number" name="{{#gameNameLower name}}{{/gameName}}" class="form-control align-center" placeholder="#"></td>
            {{/each}}
            </table>
            {{!-- <table>
            {{#each games}}
                <th class="align-center">{{name}}</th>
            {{/each}}
            <tr>
                {{#each games}}
                <td><input type="number" name="{{#gameName name}}{{/gameName}}" class="form-control align-center" placeholder="#"></td>
              {{/each}}
              </tr>
              </table> --}}
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="workers-input" class="col-sm-2">Workers</label>
        <div class="col-sm-6">
            <select multiple data-placeholder="Choose some workers" class="form-control chosen-select" name="workers">
            <option value=""></option>
            {{#each workers}}
                <option value={{_id}}>{{first_name}} {{last_name}}</option>
            {{/each}}
            </select>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <label for="event-hostname-input" class="col-sm-2">Main Contact</label>
        <div class="col-sm-6">
            <input type="text" name="hostname" class="form-control" id="event-hostname-input" placeholder="Name of main contact" value="{{event.hostname}}">
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="row">
        <div class="col-sm-4"></div>
        <button type="submit" class="btn btn-primary col-sm-6">Create Event</button>
    </div>

</form>
